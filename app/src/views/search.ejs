<!DOCTYPE html>
<%-include("./partials/head")  %>
<body>
    <%-include("./partials/header")  %>


    <main>

        <h2 class="main-title"> Resultados de la busqueda : <%= productSearch %></h2>

        <section class="main-sales">
        <% if (searchResult.length != 0 ) { %>
            <% searchResult.forEach(({image,name,description,id,price}) => { %>
                <article class="main-section-article">
                    <div class="main-section-article-product">
                        <a href="/products/detail/<%- id  %>"><img src="/images/products/<%=image ? image : 'default-image.png' %>"></a>
                        <div class="show-more"><a href="/products/detail/<%- id  %>">Ver MÃ¡s</a></div>
                        <div class="product__description">
                            <h3 class="product__title"><%= name %></h3>
                            <span class="product__price"><%= price %></span>
                        </div>
                            <i class="product__icon fa-sharp fa-solid fa-cart-plus"></i>
                    </div>
                </article>
                    <% }) %>
                </section>
         <% } else { %>
            <div class="not-found">
                <h2 class="error-msg">
                    <!-- <iframe src="https://gifer.com/embed/40Oj" width=480 height=466.286 frameBorder="0" allowFullScreen></iframe> -->
                    <div style="padding-top:97.143%;position:relative;"><iframe src="https://gifer.com/embed/40Oj" width="100%" height="100%" style='position:absolute;top:0;left:0;' frameBorder="0" allowFullScreen></iframe></div>
                    <p>Ningun elemento coincide con su busqueda</p>
                <h2>
            </div>
        <% } %>
    </main>

    <%-include("./partials/footer")  %>
</body>
</html>